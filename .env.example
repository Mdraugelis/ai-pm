# Environment Variables Template
# Copy this to .env and fill in your values
# DO NOT commit .env to version control

# ============================================================================
# ANTHROPIC API
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================================================
# DATABASE
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_pm_agent_dev
DB_USER=ai_pm_user
DB_PASSWORD=your-secure-password-here

# Full database URL (alternative to individual settings)
# DATABASE_URL=postgresql://ai_pm_user:password@localhost:5432/ai_pm_agent_dev

# ============================================================================
# SERVICENOW API
# ============================================================================
SERVICENOW_API_URL=https://your-instance.service-now.com/api/now
SERVICENOW_API_KEY=your-snow-api-key-here
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-for-encryption
JWT_SECRET=your-jwt-secret-for-auth

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# Email notifications (if enabled)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@geisinger.org
# SMTP_PASSWORD=your-email-password

# Azure AD (if using for authentication)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
